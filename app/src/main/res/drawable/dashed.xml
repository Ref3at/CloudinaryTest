<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-15"
            android:toDegrees="15"
            android:pivotX="40">
            <shape android:shape="line">
                <stroke
                    android:width="1dp"
                    android:color="@android:color/white"
                    android:dashGap="0dp"
                    android:dashWidth="5px" />
            </shape>
        </rotate>
    </item>
</layer-list>